{
  "prompts": [
    {
      "name": "milvusDomainName",
      "default": "milvus.example.com",
      "message": "Please enter the domain name you want milvus to be accessible on:",
      "type": "Input"
    },
    {
      "name": "argocdDomainName",
      "default": "argocd.example.com",
      "message": "Please enter the domain name you want argocd to be accessible on:",
      "type": "Input"
    },

    {
      "message": "Please enter the email address you want to use for lets encrypt:",
      "default": "admin@example.com",
      "name": "letsEncryptClusterIssuerEmailAddress",
      "type": "Input"
    }
  ],
  "outputs": {
    "cndi-config": {
      "cndi_version": "v1",
      "infrastructure": {
        "open_ports": [
          {
            "name": "milvus",
            "number": 65535,
            "namespace": "milvus",
            "service": "milvus-milvus"
          }
        ],
        "cndi": {
          "nodes": [
            {
              "name": "milvus-a",
              "kind": "ec2",
              "role": "leader",
              "machine_type": "t3.2xlarge",
              "volume_size": 1000
            },
            {
              "name": "milvus-b",
              "kind": "ec2",
              "machine_type": "t3.2xlarge",
              "volume_size": 1000
            },
            {
              "name": "milvus-c",
              "kind": "ec2",
              "machine_type": "t3.2xlarge",
              "volume_size": 1000
            }
          ]
        }
      },
      "applications": {
        "milvus": {
          "repoURL": "https://milvus-io.github.io/milvus-operator/",
          "chart": "milvus-operator",
          "destinationNamespace": "milvus",
          "targetRevision": "4.0.24",
          "values": {
            "minio": {
              "persistence": {
                "enabled": true,
                "existingClaim": "",
                "accessMode": "ReadWriteOnce",
                "size": "20Gi"
              }
            },
            "bookkeeper": {
              "replicaCount": 1,
              "volumes": {
                "journal": {
                  "name": "journal",
                  "size": "10Gi"
                },
                "ledgers": {
                  "name": "ledgers",
                  "size": "20Gi"
                }
              }
            },
            "pulsar": {
              "enabled": false
            },
            "kafka": {
              "enabled": true
            },
            "ingress": {
              "enabled": true,
              "annotations": {
                "nginx.ingress.kubernetes.io/backend-protocol": "GRPC",
                "nginx.ingress.kubernetes.io/listen-ports-ssl": "[19530]",
                "nginx.ingress.kubernetes.io/proxy-body-size": "4m",
                "nginx.ingress.kubernetes.io/ssl-redirect": "true"
              },
              "rules": [
                {
                  "host": "{{ $.cndi.prompts.responses.milvusDomainName }}",
                  "path": "/",
                  "pathType": "Prefix"
                }
              ],
              "tls": [
                {
                  "secretName": "lets-encrypt-private-key",
                  "hosts": ["{{ $.cndi.prompts.responses.milvusDomainName }}"]
                }
              ]
            }
          }
        }
      },
      "cluster_manifests": {
        "cert-manager-cluster-issuer": {
          "apiVersion": "cert-manager.io/v1",
          "kind": "ClusterIssuer",
          "metadata": {
            "name": "lets-encrypt"
          },
          "spec": {
            "acme": {
              "email": "{{ $.cndi.prompts.responses.letsEncryptClusterIssuerEmailAddress }}",
              "server": "https://acme-v02.api.letsencrypt.org/directory",
              "privateKeySecretRef": {
                "name": "lets-encrypt-private-key"
              },
              "solvers": [
                {
                  "http01": {
                    "ingress": {
                      "class": "public"
                    }
                  }
                }
              ]
            }
          }
        },
        "argo-ingress": {
          "apiVersion": "networking.k8s.io/v1",
          "kind": "Ingress",
          "metadata": {
            "name": "argocd-server-ingress",
            "namespace": "argocd",
            "annotations": {
              "cert-manager.io/cluster-issuer": "lets-encrypt",
              "kubernetes.io/tls-acme": "true",
              "nginx.ingress.kubernetes.io/ssl-passthrough": "true",
              "nginx.ingress.kubernetes.io/backend-protocol": "HTTPS"
            }
          },
          "spec": {
            "tls": [
              {
                "hosts": ["{{ $.cndi.prompts.responses.argocdDomainName }}"],
                "secretName": "lets-encrypt-private-key"
              }
            ],
            "rules": [
              {
                "host": "{{ $.cndi.prompts.responses.argocdDomainName }}",
                "http": {
                  "paths": [
                    {
                      "path": "/",
                      "pathType": "Prefix",
                      "backend": {
                        "service": {
                          "name": "argocd-server",
                          "port": {
                            "name": "https"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    "env": {
      "extend_basic_env": "aws"
    },
    "readme": {
      "extend_basic_readme": "aws",
      "template_section": "# milvus\n\nTo get started with milvus..."
    }
  }
}
